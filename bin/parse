#!/usr/bin/env ruby
# frozen_string_literal: true

# Usage:
#   bin/parse <filename>
#   bin/parse -e "<source-code>"

$:.unshift(File.expand_path("../lib", __dir__))
require "yarp"

if ARGV[0] == "-e"
  pp YARP.parse(ARGV[1])
else
  result = YARP.parse_file(ARGV[0])
  pp result

  result.errors.each(&:print_error)
end
